@{
    ViewData["Title"] = "Worldwide Public Holiday Api";
    ViewData["Description"] = "A free API for public holiday data. We currently support over 100 countries.";
}

<div class="container">

    <div class="mt-4 mb-4">
        <h2>Public Holiday API</h2>
        
        You can use this project direct if you are use .net or alternative you can use the api.<br />
        If you need many request please host your own api instance. A <a href="https://hub.docker.com/r/nagerat/nager-date">docker container</a> is available.<br /><br />
        <a href="/swagger" class="btn btn-primary">API Documentation</a>
    </div>

    <h4>Example <small>Returns the public holidays from a given year and country.</small></h4>

    <div class="card mt-4">
        <div class="p-4">
            <a href="/api/v3/PublicHolidays/2017/AT">https://date.nager.at/api/v3/publicholidays/2017/AT?api_key=0123456789</a>
        </div>
    </div>

    <div class="card mt-4">
        <header class="card-header border-0">Request</header>

        <div class="p-4">

            <div class="alert alert-success">
                <strong>GET</strong> /api/v3/PublicHolidays/{Year}/{CountryCode}?api_key={your-api-key-here}
            </div>

            <table class="table" style="background-color:#ffffff;">
                <thead>
                    <tr>
                        <th>Parameters</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Year</td>
                        <td>2017</td>
                    </tr>
                    <tr>
                        <td>CountryCode</td>
                        <td>AT</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

